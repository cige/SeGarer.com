<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<servlet>
		<servlet-name>HelloWorldServlet</servlet-name>
		<servlet-class>servlets.HelloWorldServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HelloWorldServlet</servlet-name>
		<url-pattern>/helloWorld</url-pattern>
	</servlet-mapping>
	
	<!-- Sign In -->

	<servlet>
		<servlet-name>SignInServlet</servlet-name>
		<servlet-class>servlets.SignInServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SignInServlet</servlet-name>
		<url-pattern>/signIn</url-pattern>
	</servlet-mapping>

	<!-- Sign Out -->

	<servlet>
		<servlet-name>SignOutServlet</servlet-name>
		<servlet-class>servlets.SignOutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SignOutServlet</servlet-name>
		<url-pattern>/signOut</url-pattern>
	</servlet-mapping>
	
	<!-- Welcome page(s) -->

	<welcome-file-list>
		<welcome-file>connexion.jsp</welcome-file>
	</welcome-file-list>

</web-app>