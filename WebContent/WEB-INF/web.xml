<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	
	<!-- Sign Up -->

	<servlet>
		<servlet-name>SignUpServlet</servlet-name>
		<servlet-class>servlets.SignUpServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SignUpServlet</servlet-name>
		<url-pattern>/signUp</url-pattern>
	</servlet-mapping>
	
	<!-- Sign In -->

	<servlet>
		<servlet-name>SignInServlet</servlet-name>
		<servlet-class>servlets.SignInServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SignInServlet</servlet-name>
		<url-pattern>/signIn</url-pattern>
	</servlet-mapping>

	<!-- Sign Out -->

	<servlet>
		<servlet-name>SignOutServlet</servlet-name>
		<servlet-class>servlets.SignOutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SignOutServlet</servlet-name>
		<url-pattern>/signOut</url-pattern>
	</servlet-mapping>
	
	<!-- Release Spot -->

	<servlet>
		<servlet-name>ReleaseSpotServlet</servlet-name>
		<servlet-class>servlets.ReleaseSpotServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ReleaseSpotServlet</servlet-name>
		<url-pattern>/release</url-pattern>
	</servlet-mapping>
	
	<!-- Find Spots -->

	<servlet>
		<servlet-name>FindSpotsServlet</servlet-name>
		<servlet-class>servlets.FindNearestSpotsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FindSpotsServlet</servlet-name>
		<url-pattern>/find</url-pattern>
	</servlet-mapping>
	
	<!-- Welcome page(s) -->

	<welcome-file-list>
		<welcome-file>main.jsp</welcome-file>
	</welcome-file-list>

</web-app>